{
  "compilerOptions": {
    "target": "ES6",                          // Use modern JavaScript features
    "module": "CommonJS",                     // Compatible with Node.js
    "rootDir": "./",                          // Compile from root
    "outDir": "./dist",                       // Output folder for compiled JS
    "strict": true,                           // Enable all strict type checks
    "esModuleInterop": true,                  // Support ES-style imports
    "skipLibCheck": true,                     // Skip checking .d.ts files
    "forceConsistentCasingInFileNames": true, // Consistent casing
    "moduleResolution": "node",               // Resolve modules like Node
    "resolveJsonModule": true,                // Allow importing JSON
    "baseUrl": "./"                           // Base path for imports
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
